<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="enter name">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="person@yahoo.com">
        </div>
        <div class="form-group">
            <label for="occupation" class="text-light">Occupation</label>
            <input type="text" name="occupation" value="" placeholder="occupation">
        </div>
        <div class="form-group">
            <label for="company" class="text-light">Company</label>
            <input type="text" name="company" value="" placeholder="Google">
        </div>
        <div class="form-group">
            <label for="contact" class="text-light">Contact Number</label>
            <input type="text" name="contact" value="" placeholder="516-544-5555">
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Submit</button>
        </div>
    </div>
</form>